{
  "manifest_version": 3,
  "name": "Sensitive Text Hider",
  "version": "1.1",
  "description": "Hide selected sensitive text with custom symbols before taking screenshots.",
  "permissions": ["contextMenus", "scripting", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text Hider Settings"
  }
}
